    <script>
      let email= document.getElementById("email");
      let pwd = document.getElementById("password");


    function validate(){

  // let pwdcheck=/^(?=.*[a-z])(?=.*[A-Z])(?=.*\d)[a-zA-Z\d]{8,}$/;
        let emailCheck= /^([\w\.-]+)@([\w\-]+).([a-z]{2,3})(.[a-z]{2,3})?$/;
        let pwdcheck = /^(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}$/;
        
         if(email.value && pwd==""){
            alert("Email cannot be empty");
            return false;
        }
        else if(!emailCheck.test(email.value))
        {
          alert("Invalid Email Format;   Eg: name@domain.com");
          return false;
        }
     

        else if(pwd.value.length<=7){
            alert("Password is too short ,Minimum of  8 characters required");
         
            return false;
        }
        else if(!pwdcheck.test(pwd.value)){
            alert("Oops!!..Invalid format,  Should contain Atleast 1 uppercase,1 lowercase and  1 number required");
          
            return false;
        }
        
    
        else{
            return true;
        }

      }

    </script>
  
